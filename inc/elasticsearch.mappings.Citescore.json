DELETE /citescore

PUT /citescore
{
  "settings": {
    "number_of_shards" :   4,
    "number_of_replicas" : 1,
    "analysis": {
        "filter": {
            "portuguese_stop": {
              "type":       "stop",
              "stopwords":  "_portuguese_" 
            },
            "my_ascii_folding" : {
                "type" : "asciifolding",
                "preserve_original" : true
            },
            "portuguese_stemmer": {
              "type":       "stemmer",
              "language":   "light_portuguese"
            }            
      }, 
      "analyzer": {
        "portuguese": {
          "tokenizer": "standard",
          "filter":  [ "standard", "lowercase", "my_ascii_folding","portuguese_stop","portuguese_stemmer"]
        }
      }
    }
  }
}

PUT /citescore/issn/_mapping
{
    "issn": {
    "properties": {
        "citescore": {
        "properties": {
            "2016": {
            "properties": {
                "SJR": {
                "type": "half_float",
                "fields": {
                    "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                    }
                }
                },
                "SNIP": {
                "type": "half_float",
                "fields": {
                    "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                    }
                }
                },
                "open_access": {
                "type": "text",
                "fields": {
                    "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                    }
                }
                },
                "citescore": {
                "type": "half_float",
                "fields": {
                    "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                    }
                }
                }
            }
            }
        }
        },
        "issn": {
        "type": "text",
        "fields": {
            "keyword": {
            "type": "keyword",
            "ignore_above": 256
            }
        }
        },
        "scopus_sub_subject_area": {
        "type": "text",
        "analyzer": "portuguese",
        "fields": {
            "keyword": {
            "type": "keyword",
            "ignore_above": 256
            }
        }
        },        
        "title": {
        "type": "text",
        "analyzer": "portuguese",
        "fields": {
            "keyword": {
            "type": "keyword",
            "ignore_above": 256
            }
        }
        }
    }
    }
}